<?xml version="1.0"?>
<ruleset name="DOR">
    <description>A ruleset custom-built for Stanford DOR.</description>
    <!-- Include the whole Drupal standard -->
    <rule ref="./vendor/drupalmodule/coder/coder_sniffer/Drupal">
      <!-- Exclude the variable naming conventions sniff so we can use camel case if we wnat to. -->
      <exclude name="Drupal.NamingConventions.ValidVariableName"/>
    </rule>
</ruleset>
